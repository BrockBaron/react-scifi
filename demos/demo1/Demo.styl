html, body, #app
  height 100%
  width 100%
  overflow hidden
  padding 0
  margin 0
  -moz-user-select none
  -webkit-user-select none
  -ms-user-select none
  -o-user-select none
  user-select none

body
  background-color #0D1214

.Footer
  position fixed
  bottom 0
  left 0
  width 100%
  height 30px
  text-align center
  font-family 'monaco', fixed-width
  font-size 12px

a
  text-decoration none
  transition color ease-in 100ms
  color rgba(255,255,255,0.1)
  &:hover
    color rgba(255,255,255,0.4)
